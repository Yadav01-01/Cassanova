<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Cassanova" parent="android:Theme.Material.Light.NoActionBar">
    <!-- For API level 23 (Marshmallow) and above -->
    <item name="android:windowLightStatusBar">true</item>
    <!-- For API level 30 (Android 11) and above -->
<!--    <item name="android:windowDecorFitsSystemWindows">false</item>-->

    </style>
    <style name="CustomDialogTheme" parent="ThemeOverlay.Material3.Dialog">
        <item name="android:windowBackground">@color/dialog_scrim_color</item>
        <!-- Or for a transparent background -->
        <!-- <item name="android:windowBackground">@android:color/transparent</item> -->
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Main background -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackground">@color/black</item>

        <!-- Text colors -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>

        <!-- Accent colors (buttons, highlights) -->
        <item name="colorAccent">@color/gold_gradient_end2</item>
        <item name="android:colorAccent">@color/gold_gradient_end2</item>

        <!-- Button styles -->
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyled</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyled</item>
        <item name="buttonBarNeutralButtonStyle">@style/DialogButtonStyled</item>

        <!-- Disable all caps for buttons -->
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DialogButtonStyled" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>